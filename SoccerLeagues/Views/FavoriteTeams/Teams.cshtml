@model List<SoccerLeagues.Entities.ModelsEntities.FavoriteTeam>

<h1>Ulubione drużyny</h1>

<p>
    <a asp-controller="Home" asp-action="Index">Powrót do drużyn</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Drużyna</th>
            <th></th>
    </thead>
    <tbody>
        @foreach (var favoriteTeam in Model)
        {
            <tr>
                <td>@favoriteTeam.Team.TeamName</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="FavoriteTeams">
                        <input type="hidden" name="id" value="@favoriteTeam.TeamId" />
                        <button type="submit" class="btn btn-danger">Usuń z ulubionych</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>